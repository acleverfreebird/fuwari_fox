{
	"headers": [
		{
			"source": "/_astro/:path*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "CDN-Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/fonts/:path*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				},
				{
					"key": "Access-Control-Allow-Origin",
					"value": "*"
				}
			]
		},
		{
			"source": "/favicon/:path*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=86400"
				}
			]
		},
		{
			"source": "/:path*.(webp|avif|jpg|jpeg|png|gif|svg)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				}
			]
		},
		{
			"source": "/:path*.(js|css|woff|woff2)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/api/:path*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, s-maxage=60, stale-while-revalidate=300"
				},
				{
					"key": "CDN-Cache-Control",
					"value": "public, s-maxage=300"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				}
			]
		},
		{
			"source": "/:path*.html",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=0, must-revalidate"
				},
				{
					"key": "CDN-Cache-Control",
					"value": "public, s-maxage=7200, stale-while-revalidate=86400"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "SAMEORIGIN"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		},
		{
			"source": "/pagefind/:path*",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=604800, immutable"
				},
				{
					"key": "CDN-Cache-Control",
					"value": "public, max-age=604800, immutable"
				}
			]
		}
	],
	"rewrites": [
		{
			"source": "/sitemap.xml",
			"destination": "/sitemap.xml"
		},
		{
			"source": "/rss.xml",
			"destination": "/rss.xml"
		}
	],
	"redirects": [
		{
			"source": "/posts/how-to-use-flask",
			"destination": "/posts/how-to-use-flask/",
			"permanent": true
		}
	]
}
